@using MVC_CV.Models.Entity
@model List<Tbl_Awards>
 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">

                        </div><!-- /.card-header -->
                        <div class="card-body">

                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    <!-- timeline time label -->
                                    @foreach (var item in Model)
                                    {


                                    <div class="time-label">
                                        <span class="bg-success">
                                            @item.Date
                                        </span>
                                    </div>
                                    <!-- /.timeline-label -->
                                    <!-- timeline item -->
                                    <div>
                                        @*<i class="fas fa-comment bg-primary"></i>*@
                                        <div class="timeline-item">
                                         
                                           
                                            <div class="timeline-body">
                                               @item.Statement
                                            </div>
                                            <div class="timeline-footer">
                                                <a href="/Award/UpdateAward/@item.ID" class="btn btn-primary btn-sm">Edit</a>
                                                <a href="/Award/UpdateAward/@item.ID" class="btn btn-danger btn-sm">Delete</a>
                                            </div>
                                        </div>
                                    </div>
                                    }








                                </div>
                                <a href="/Award/AddAward" class="btn btn-outline-info">Add New Award/Sertificate</a>
                            </div>
                        </div>

                    </div>
                </div>

            </div>

        </div>


    </section>
</body>
</html>

