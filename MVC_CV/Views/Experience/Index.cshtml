@using MVC_CV.Models.Entity
@model List<Tbl_Experience>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />

<h2> Experience</h2>
<table class=" table table-bordered">
    <tr>
        <th> ID</th>
        <th> Title</th>
        <th> SubTitle</th>
        <th> Date</th>
        <th> Delete</th>
        <th> Update</th>

    </tr>
    @foreach (var item in Model) /// the reason we use foreach here is that we are getting list as outcome 
    {
        <tr>
            <td> @item.ID   </td>
            <td> @item.Title   </td>
            <td> @item.SubTitle  </td>
            <td> @item.Date   </td>
            <td> <a href="/Experience/DeleteExperience/@item.ID" class="btn btn-danger">Delete</a></td>
            <td> <a href="/Experience/UpdateExperience/@item.ID" class=" btn btn-info">Update</a></td>
        </tr>
    }
</table>
<a href="/Experience/AddExperience" class="btn btn-success">Add New Experience</a>

