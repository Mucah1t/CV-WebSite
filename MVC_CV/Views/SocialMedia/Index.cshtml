@using MVC_CV.Models.Entity
@model List<Tbl_SocialMedia>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}






<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Social Media Accounts</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                               
                                @*Following sytanx includes data-toggle and data-target property which enable us to make addition to our table with pop-up*@
                                <button class="btn btn-outline-success" data-toggle="modal" data-target="#Modal1">Add New Social Media Account</button>
                               
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>

                                            <th>Social Media</th>
                                            <th>Status </th>
                                            <th>Remove</th>
                                            <th>Edit</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {

                                            <tr>

                                                <td>@item.ID</td>
                                                <td>@item.Name</td>
                                                <td> @item.Statu</td>  


                                                <td> <a href="/SocialMedia/Remove/@item.ID" class="btn btn-outline-danger btn-sm"><i class="fas fa-trash"> </i> Remove</a></td>
                                                <td> <a href="/SocialMedia/UpdateSocMedia/@item.ID" class=" btn btn-outline-info"><i class="fas fa-pencil-alt"> </i> Edit</a></td>
                                            </tr>
                                        }



                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        @*///////////////////////***********\\\\\\\\\\\\\\\\\\\\\\\*@
        <!-- /.POP-UP -->
            @* POP UP*@
        <div class="modal" id="Modal1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title"> New Social Media Inserting Window </h2>
                    </div>
                    <form action="/SocialMedia/Add" method="post">
                        <div class="modal-body">
                            <label> Social Media Name</label>
                            <input type="text" name="Name" class="form-control" />
                            <br />
                            <label> Social Media Link</label>
                            <input type="text" name="Link" class="form-control" />
                            <br />
                            <label> Icon</label>
                            <input type="text" name="Icon" class="form-control" />
                            <br />
                            <button class="btn btn-outline-success btn-sm"> Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</body>
</html>



